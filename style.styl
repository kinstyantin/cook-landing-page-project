@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '/icomoon.ttf?n7gfbh') format('truetype'), url(icomoon-font-path + '/icomoon.woff?n7gfbh') format('woff'), url(icomoon-font-path + '/icomoon.svg?n7gfbh#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-google
  &:before
    content icon-google
.icon-facebook
  &:before
    content icon-facebook
.icon-instagram
  &:before
    content icon-instagram

