.workflow
  background-color #f8f9f9

.workflow__inner
  inner-size()
  padding-top 100px
  padding-bottom 230px

.workflow .heading
  margin-bottom 35px

.workflow-tabs__item
  height 250px

.workflow-tabs__item b
  display block
  margin-bottom 30px

.workflow-tabs__item p
  font-size 18px
  line-height 36px
  color #5c5c5c

.tabs
  display flex
  margin-bottom 90px

.tabcontent
  display none

.tablinks
  background-color initial
  padding 20px
  font-size 18px
  font-weight bold
  border none
  border-bottom 2px solid transparent
  cursor pointer
  outline none



.tablinks.active
  color #ff8400
  border-bottom-color #ff8400
