.contact
  inner-size()
  padding-top 70px
  padding-bottom 100px

.contact-form
  display flex
  flex-direction column

.contact-form__container
  display flex
  justify-content space-between
  flex-wrap wrap
  margin-bottom 50px

.contact-form__info
  display flex
  flex-direction column
  justify-content space-between

.contact-form__input
  width 470px
  height 65px
  margin-bottom 25px
  padding 25px 0 25px 25px
  border 2px solid #ececec
  border-radius 5px
  &:last-of-type
    margin-bottom 0

.contact-form__message
  width 57.89473684210526%

.contact-form__submit
  align-self flex-end
  width 230px
  height 70px
  background-color #ff8400
  border 0
  border-radius 5px
  outline 0
  font-family 'Droid Sans', sans-serif
  font-size 18px
  line-height 1
  color #fff
  text-transform uppercase
  cursor pointer
