.download
  background-color #f1f1f1

.download__inner
  inner-size()
  padding 265px 0
  background-image url('img/download-phone.png')
  background-repeat no-repeat
  background-position 0 50%
  display flex
  flex-direction column
  justify-content center
  align-items flex-end

.download__inner > *
  width 670px

.heading--download
  margin-bottom 50px

.download__heading-desc
  margin-bottom 90px
  font-size 20px
  line-height 36px
  color #5b5b5b

.download-links
  display flex

.download-link
  padding 20px 20px 20px 60px
  border 2px solid #ff8400
  border-radius 5px
  color #ff8400
  text-align right
  text-decoration none
  &:hover
    background-color #ff8400
    color #fff

.download-link--apple, .download-link--google
  background-position 5% 50%
  background-repeat no-repeat

.download-link--apple
  background-image url('data:image/png;base64,')
  margin-right 30px
  &:hover
    background-image url('data:image/png;base64,')

.download-link--google
  background-image url('data:image/png;base64,')
  &:hover
    background-image url('data:image/png;base64,')
